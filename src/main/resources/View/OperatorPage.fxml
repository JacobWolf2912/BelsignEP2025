<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<FlowPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.OperatorPageController">
   <children>
        <SplitPane dividerPositions="0.4" orientation="HORIZONTAL">
            <!-- Left Image Grid -->
            <VBox>
                <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" pannable="false" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
               <GridPane gridLinesVisible="true">
                  <columnConstraints>
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="40.0" />
                     <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="60.0" prefWidth="100.0" />
                  </columnConstraints>
                  <rowConstraints>
                     <RowConstraints minHeight="10.0" percentHeight="20.0" vgrow="SOMETIMES" />
                     <RowConstraints minHeight="10.0" percentHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     <RowConstraints minHeight="10.0" percentHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     <RowConstraints minHeight="10.0" percentHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     <RowConstraints minHeight="10.0" percentHeight="20.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  </rowConstraints>
                  <children>
                       <StackPane fx:id="addImagePlaceholder" onMouseClicked="#handleAddImage" GridPane.columnIndex="1">
                           <Label styleClass="add-label" text="+" />
                       </StackPane>
                     <StackPane fx:id="addImagePlaceholder1" layoutX="87.0" layoutY="10.0" onMouseClicked="#handleAddImage" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <children>
                           <Label styleClass="add-label" text="+" />
                        </children>
                     </StackPane>
                     <StackPane fx:id="addImagePlaceholder11" layoutX="10.0" layoutY="10.0" onMouseClicked="#handleAddImage" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <children>
                           <Label styleClass="add-label" text="+" />
                        </children>
                     </StackPane>
                     <StackPane fx:id="addImagePlaceholder111" layoutX="10.0" layoutY="10.0" onMouseClicked="#handleAddImage" GridPane.columnIndex="1" GridPane.rowIndex="3">
                        <children>
                           <Label styleClass="add-label" text="+" />
                        </children>
                     </StackPane>
                     <StackPane fx:id="addImagePlaceholder1111" layoutX="10.0" layoutY="10.0" onMouseClicked="#handleAddImage" GridPane.columnIndex="1" GridPane.rowIndex="4">
                        <children>
                           <Label styleClass="add-label" text="+" />
                        </children>
                     </StackPane>
                     <Label text="Front:" GridPane.halignment="CENTER" />
                     <Label text="Back:" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                     <Label text="Right:" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
                     <Label text="Left:" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
                     <Label text="Top:" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
                  </children>
               </GridPane>
                </ScrollPane>
            </VBox>
      
      <!-- Right Form -->
            <VBox spacing="10">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>
                <TextField promptText="Order Number" />
                <TextArea fx:id="notesArea" promptText="Notes" />
                <HBox spacing="10">
                    <ComboBox fx:id="statusComboBox" promptText="Order Status" />
                    <Button fx:id="saveButton" styleClass="inline-button" text="Save" />
                    <Button fx:id="editButton" styleClass="inline-button" text="Edit" />
                </HBox>
      
            </VBox>
        </SplitPane>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</FlowPane>
