<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ScrollPane?>

<VBox fx:id="navigationBar" stylesheets="@/Css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.NavbarController">
    <!-- Header with Image on Left and Navbar on Right -->
    <HBox fx:id="Header" alignment="CENTER_LEFT" >

        <!-- Apply Padding Correctly -->
        <padding>
            <Insets right="10" />
        </padding>

        <!-- Logo on the Left -->
        <ImageView fx:id="logo" fitHeight="70.0" fitWidth="120.0" opacity="0.79">
            <image>
                <Image url="@/Img/BELMAN_Logo.png" />
            </image>
            <HBox.margin>
                <Insets left="15.0" />
            </HBox.margin>
        </ImageView>

        <!-- Spacer to Push Navbar to the Right -->
        <Region HBox.hgrow="ALWAYS" />


        <!-- Navigation Bar (Buttons) -->
        <HBox fx:id="navbar" alignment="TOP_CENTER" >
            <Button fx:id="OrderTabId" text="Order" onAction="#OrderTab" />
            <Button fx:id="OperatorTabId" text="Operator" onAction="#OperatorTab" />
            <Button fx:id="QCTabId" text="QC" onAction="#QCTab" />
            <Button fx:id="AdminTabId" text="Admin" onAction="#AdminTab" />

            <StackPane fx:id="profileImagePane" alignment="CENTER" onMouseClicked="#ProfileTab">
                <ImageView fx:id="profile_pic" fitHeight="65.0" fitWidth="61.0"/>
            </StackPane>
        </HBox>

    </HBox>


</VBox>

