<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Region?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.LoginController"
      spacing="20" alignment="CENTER"
      stylesheets="@styles.css"
      styleClass="vbox"
      style="-fx-padding: 0;"
      fillWidth="true">

    <HBox fx:id="titleBar" styleClass="title-bar"
          prefHeight="22" alignment="TOP_CENTER"
          spacing="4" style="-fx-padding: 3 3 0 3;"
          VBox.vgrow="NEVER">

        <Label text="QC_Belsign" styleClass="title-text" />
        <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>
        <Button fx:id="minimizeButton" text="—" styleClass="title-button"/>
        <Button fx:id="closeButton" text="✕" styleClass="title-button"/>
    </HBox>

    <!-- Buttons -->
    <Button text="Admin" fx:id="adminButton" minWidth="200" minHeight="60" styleClass="login-button"/>
    <Button text="Operator" fx:id="operatorButton" minWidth="200" minHeight="60" styleClass="login-button"/>
    <Button text="QA" fx:id="qaButton" minWidth="200" minHeight="60" styleClass="login-button"/>
</VBox>